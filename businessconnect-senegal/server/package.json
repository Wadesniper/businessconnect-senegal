    "mongoose": "^8.14.2",
    "multer": "^1.4.5-lts.2",
    "node-pg-migrate": "^6.2.2",
    "nodemailer": "^6.10.1",
    "path-scurry": "^1.10.1",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "uuid": "^9.0.1",
