{
  "name": "businessconnect-server",
  "version": "1.0.0",
  "description": "Serveur backend de BusinessConnect Sénégal",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --project tsconfig.dev.json --respawn src/index.ts",
    "build:dev": "tsc --project tsconfig.dev.json",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "postinstall": "yarn build:dev",
