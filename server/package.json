    "@types/mongodb": "^4.0.6",
    "@types/morgan": "1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.4",
    "@types/qs": "^6.14.0",
    "@types/uuid": "^9.0.7",
    "ts-node-dev": "^2.0.0"
