    "compression": "1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "7.1.5",
    "express-validator": "7.0.1",
    "fs-extra": "11.2.0",
    "helmet": "7.1.0",
    "jsonwebtoken": "9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "8.0.3",
    "morgan": "1.10.0",
    "multer": "3.0.0-alpha.1",
    "nodemailer": "6.9.7",
    "pdfkit": "0.14.0",
